<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.biosphere.library.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.biosphere.library.pojo.User">
        <id column="openID" property="openID" />
        <result column="id" property="id" />
        <result column="userName" property="userName" />
        <result column="avatarUrl" property="avatarUrl" />
        <result column="latestLoginTime" property="latestLoginTime" />
        <result column="energyPoint" property="energyPoint" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        openID, id, userName, avatarUrl, latestLoginTime, energyPoint
    </sql>

</mapper>
