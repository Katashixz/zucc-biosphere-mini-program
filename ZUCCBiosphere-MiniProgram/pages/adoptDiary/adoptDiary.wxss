/* pages/adoptDiary/adoptDiary.wxss */

.timeSelector{
  font-size: 30rpx;
  margin-top: 20rpx;
  width: 500rpx;
}

.chooseDate{
  color: #333;
}

.dateList{
  color: #666;
}

.timeIcon{
  color:#666;
  font-size:18rpx;
  margin-left: 5rpx;
}

.diaryList{
    display: flex;
    flex-direction: row;
    width: 95%;
    margin-left: 2.5%;
    justify-content: flex-start;
    flex-wrap: wrap;
    margin-bottom: 30rpx;
}
.diaryItem{
    display: flex;
    flex-direction: column;
    width: 100%;
    /* height: 500rpx; */
    background-color: #ffffff;
    border-radius: 40rpx;
    margin-top: 30rpx;
}
.diaryTop{
    margin-top: 20rpx;
    margin-left: 20rpx;
    display: flex;
    height: 100rpx;
    /* background-color: pink; */
    padding: 0 10rpx;

}

.userAvatar{
    z-index: 105;
    border-radius: 100rpx;
    width: 90rpx;
    height: 90rpx;
}
.singleImage{
    margin-left: 3rpx;
}

.nameAndPostTime{
    margin-left: 10rpx;
    margin-top: 10rpx;
    display: flex;
    flex: 3;
    flex-direction: column;
}
.postTime{
    font-size: 28rpx;
    color: #bbb;
}
.postManName{
    width: 300rpx;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    word-break: break-all;
}
.diaryMid{
    padding: 10rpx 0rpx;
}
.diaryMid text{
    padding: 0 20rpx;
    display: -webkit-box;
    /* word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:4;
    overflow: hidden;
    text-overflow:ellipsis; */
}

.imageWithContent{
    display: flex;
    flex-wrap: wrap;
    justify-content: left;
    margin-top: 10rpx;
    padding: 0 10rpx;
}
.imageWithContent image{
    z-index: 105;
    margin-left: 5rpx;
    margin-right: 5rpx;
    border-radius: 20rpx;
    width: 220rpx;
    height: 200rpx;
}

.sumbitButton{

    position: relative !important;
    height: 60rpx !important;
    width: 120rpx !important;
    margin-top: 15rpx;
    background: #7A685B !important;
    color: #fff !important;
    text-align: center !important;
    font-size: 26rpx;
    padding: 12rpx 4rpx 12rpx 4rpx;
    /* line-height: 45rpx; */
}
.sumbitButtonOnClick{
    /* margin-top: 25rpx; */
    background: #9b8473 !important;
    color: #fff !important;
    text-align: center !important;
    /* line-height: 45rpx; */
}
.buttonType{
    width: 200rpx
}

.top{
    display: flex;
}