/* pages/searchPage/searchPage.wxss */

.catIcon{
    /* w:h = 9:8 */
    width: 270rpx;
    height: 240rpx;
    position: relative;
    left: 260rpx;
    margin-top: 40rpx;
    /* margin-bottom: 10rpx */
}
.searchResult{
    padding: 0 20rpx 20rpx;

}

.resultItem{
    padding: 30rpx 20rpx 10rpx;
    background-color: #fff;
    border-radius: 40rpx;
    margin-bottom: 30rpx;
    z-index: 20;
}
.postLineTop{
    height: 100rpx;
    display: flex;
    padding: 0 10rpx;
}
.avatar{
    margin-right: 20rpx;

}
.avatar image{
    z-index: 105;
    border-radius: 100rpx;
    width: 100rpx;
    height: 100rpx;
}
.nameAndPostTime{
    margin-top: 10rpx;
    display: flex;
    flex: 3;
    flex-direction: column;
}
.postTime{
    font-size: 28rpx;
    color: #bbb;
}

.postLineMid{
    padding: 10rpx 0rpx;

}
.postLineMid text{
    padding: 0 20rpx;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
    overflow: hidden;
    text-overflow:ellipsis;
}
.themeColor{
    color: #14bb22;
    margin-right: 10rpx;
    font-weight: 500;
}
.imageWithContent{
    display: flex;
    justify-content: left;
    margin-top: 10rpx;
    padding: 0 10rpx;
}
.postManName{
    display: -webkit-box;
    -webkit-line-clamp: 1; /*限制文本行数*/
    -webkit-box-orient: vertical;
    word-break: break-all; /* 追加这一行代码 */
    overflow: hidden;
    text-overflow: ellipsis;
    width: 400rpx;

}
.imageWithContent image{
    z-index: 105;
    margin: 5rpx;
    border-radius: 20rpx;
    width: 209rpx;
    height: 200rpx;
}