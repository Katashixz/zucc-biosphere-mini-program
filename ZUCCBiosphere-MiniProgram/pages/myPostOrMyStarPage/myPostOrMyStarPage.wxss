/* pages/templatePage/templatePage.wxss */

.postList{
    margin-top: 30rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}
.post{
    display: flex;
}
.delete{
    border-radius: 90rpx;
    height: 80rpx;
    margin-left: 30rpx;
    width: 90rpx;
    align-self: center;
    margin-bottom: 30rpx;
    /* margin-top: 25%; */
    background-color: rgb(241, 81, 81);
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
    color: #fff;
    /* margin-left: 20rpx; */
    

    /* 关键代码 start */
    transform: translateX(150rpx);
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    -webkit-transform: translateX(150rpx);
    /* 关键代码 end */
}
.delete image{
    width: 60rpx;
    height: 60rpx;
}
.touch-move-active .item-left,
.touch-move-active .delete {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
.item-left{
    padding: 30rpx 20rpx 10rpx;
    background-color: #fff;
    border-radius: 40rpx;
    margin-bottom: 30rpx;
    z-index: 20;
    width: 100%;
    margin-left: -120rpx;
    transform: translateX(120rpx);
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    -webkit-transform: translateX(120rpx);
}
.postLineTop{
    height: 100rpx;
    display: flex;
    padding: 0 10rpx;
}
.avatar{
    margin-right: 20rpx;

}
.avatar image{
    z-index: 105;
    border-radius: 100rpx;
    width: 100rpx;
    height: 100rpx;
}
.nameAndPostTime{
    margin-top: 10rpx;
    display: flex;
    flex: 3;
    flex-direction: column;
}
.postTime{
    font-size: 28rpx;
    color: #bbb;
}
.postLineMid{
    padding: 10rpx 0rpx;

}
.postLineMid text{
    padding: 0 20rpx;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
    overflow: hidden;
    text-overflow:ellipsis;
}
.themeColor{
    color: #14bb22;
    margin-right: 10rpx;
    font-weight: 500;
}
.imageWithContent{
    display: flex;
    flex-wrap: wrap;
    justify-content: left;
    margin-top: 10rpx;
    padding: 0 10rpx;
}
.imageWithContent image{
    z-index: 105;
    margin: 5rpx;
    border-radius: 20rpx;
    width: 209rpx;
    height: 200rpx;
}

.loadTips{
    height: 60rpx;
    text-align: center;
    font-size: 30rpx;
    color: #249e2e;
    font-weight: 500;
    margin-bottom: 30rpx;
    background-color: #EEEAE7;
}
.loadTips text{
    background-color: #fff;
    border-radius: 20rpx;
    padding: 10rpx;
}
.loadAni{
