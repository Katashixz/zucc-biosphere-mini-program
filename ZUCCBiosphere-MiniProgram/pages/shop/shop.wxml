<!--pages/shop/shop.wxml-->
<view class="shop">
    <view class="homePage">
        <view class="infoBar inCenter">
            <view class="youHave">你拥有</view>
            <view class="energyPoint">
                <view style="color: #7A685B;padding-right: 10rpx;">1000</view>能量
            </view>
        </view>

        <scroll-view class="itemBar inCenter" scroll-y="true">
            <view class="father">
                <view class="item" wx:for="{{itemList}}" wx:key="item" wx:for-item="shopItem" data-index="{{index}}">
                <image class="itemImage"></image>
                <view class="itemName"></view>
                <button class="sumbit inCenter" hover-class="sumbitClick" bindtap="sumbit">兑换</button>

                </view>
            </view>
        </scroll-view>
    </view>
</view>
