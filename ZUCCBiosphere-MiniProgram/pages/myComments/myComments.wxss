/* pages/myComments/myComments.wxss */

.commentList{
    margin-top: 30rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}
.comment{
    display: flex;
}
.commentDetail{
    display: flex;
}
.delete{
    border-radius: 90rpx;
    height: 80rpx;
    margin-left: 30rpx;
    width: 90rpx;
    margin-bottom: 30rpx;
    /* margin-top: 25%; */
    background-color: rgb(241, 81, 81);
    display: flex;
    align-self: center;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
    color: #fff;
    /* margin-left: 20rpx; */
    

    /* 关键代码 start */
    transform: translateX(150rpx);
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    -webkit-transform: translateX(150rpx);
    /* 关键代码 end */
}
.delete image{
    width: 60rpx;
    height: 60rpx;
}
.touch-move-active .item-left,
.touch-move-active .delete {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.item-left{
    /* padding: 25rpx 20rpx 10rpx; */
    padding-top: 25rpx;
    padding-bottom: 25rpx;
    background-color: #fff;
    border-radius: 40rpx;
    margin-bottom: 30rpx;
    z-index: 20;
    width: 100%;
    display: flex;
    align-self: center;
    justify-content: center;
    align-items: center;
    margin-left: -120rpx;
    transform: translateX(120rpx);
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    -webkit-transform: translateX(120rpx);
}
.titleAndContent{
    position: relative;
    width: 510rpx;
    display: flex;
    flex-direction: column;
}
.commentDetail{
    position: relative;
}
.title{
    display: -webkit-box;
    
}
.user{
    color: #6E5D52;
    max-width: 220rpx;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
    overflow: hidden;
    text-overflow:ellipsis;
}
.img{

    width: 150rpx;
    height: 150rpx;
    border-radius: 20rpx;
}
.content{
    padding-top: 10rpx;
}

.commentTime{
    margin-top: 15rpx;
    /* position: relative; */
    font-size: 27rpx;
    color: #bbb;
    display: flex;
    align-items: flex-end;
}
.imgContent{    
    display: flex;
    align-self: center;
    justify-content: center;
    align-items: center;
    background-color: rgba(238, 234, 231, 0.959);
    position: relative;
    float: right;
    /* right: 0; */
    width: 150rpx;
    height: 150rpx;
    border: 1rpx solid rgba(238, 234, 231, 0.959);
    border-radius: 20rpx;
    /* margin-bottom: 20rpx; */

}
.noImageText{
    line-height: 40rpx;
    /* padding-top: 12rpx; */
    padding-left: 12rpx;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
    overflow: hidden;
    text-overflow:ellipsis;
    color: gray;
}