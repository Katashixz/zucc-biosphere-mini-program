    animation-fill-mode: forwards;
    background-color: rgb(255, 255, 255);
    font-size: 28rpx;
    
}
.optionItemStyle{
    width: 100% !important;
    border-radius: 0rpx !important;
    text-align: center;
    padding-left: 8rpx !important;
    padding-right: 8rpx !important;
    padding-top: 10rpx !important;
    padding-bottom: 7rpx !important;
    border-left: 1rpx solid rgb(211, 211, 211);
    border-right: 1rpx solid rgb(211, 211, 211);
    /* border-bottom: 1rpx solid grey; */
    color: rgb(160, 158, 158) !important;
    font-weight: 400 !important;
    font-size: 27rpx;
    margin-left: 0rpx !important;
    margin-right: 0rpx !important;
    background: #ffffff;
}
.optionListItems{
    position: relative;
    
    z-index: 1000;
}
@keyframes slidedown{
    from {
      height: 0;
    }
    to {
      height: 180rpx;
    }
  }
  
  @keyframes slideup{
    from {
      height: 180rpx;
    }
    to {
      height: 0;
    }
  }
  
  .open{
    animation: slidedown 0.5s;
  }
  
  .close{
    animation: slideup 0.5s; 
  }
  
  .optionsListHide{
    display: none;
  }
  
  .optionsListShow{
    display: block;
  }
.optionListItemsMask{
    /* position: relative; */
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    /* background: rgba(255, 255, 255, 0); */
    z-index: 100;
    opacity: 0;
    /* animation: opc 0.2s linear forwards; */
}