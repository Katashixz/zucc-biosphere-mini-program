/* toast.wxss */

/* mask 背景  */

.toast_mask {
  /* opacity: 0.5; */
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  overflow: hidden;
  position: fixed;
  z-index: 888;
  /* background: rgba(0, 0, 0, 0.2); */
  background: rgba(246,245,244,0.5);

}

/*toast 盒子*/

.toast_content_box {
    height: 500rpx;
    display: flex;
    width: 100%;
    bottom: 500rpx;
    left: 0;
    align-items: center;
    position: fixed;
    flex-direction: column;
    justify-content: center;
    z-index: 999;
  /* margin-bottom: 300rpx; */
}

.toast_image {
    width: 160rpx;
    height: 160rpx;
    position: relative;
    left: 200rpx;
}

/*toast 内容*/

.toast_content {
    width: 550rpx;
    height: 450rpx;
    padding: 12rpx 30rpx;
    background: rgba(255,255,255, 0.7);
    border-radius: 6rpx;
    margin-left: 15rpx;
    margin-right: 15rpx;
    border-radius: 40rpx;
}

/*toast 内容文字*/

.toast_content_text {
  height: 80rpx;
  width: 100%;
  color: #000000;
  font-size: 60rpx;
  text-align: center;
}

